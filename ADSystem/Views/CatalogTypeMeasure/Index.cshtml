@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "TypeMeasure";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/CatalogTypeMeasure/List")"></script>

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Tipo de Medida</h3>
    </div>
    <div class="panel-body" data-ng-controller="CatalogTypeMeasureController" data-ng-enter="listTypeMeasure(0)">
        <br />
        <br />
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-4 control-label">Tipo de Medida</label>
                <div class="col-sm-8">
                    <input data-ng-model="typeMeasure" uppercase/>
                </div>
            </div>
            <div class="form-group text-center">
                <div class="col-sm-12">
                    <button type="button" id="searchTypeMeasure" class="btn btn-primary button-search" data-loading-text='Buscando...' data-ng-click="listTypeMeasure()">Buscar</button>
                </div>
            </div>
        </form>
        <br />
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td colspan="4">
                            <div class="">
                                <ul class="pagination">
                                    <li data-ng-class="prevPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                    </li>
                                    <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                        <a href="javascript:void(0);">{{n + 1}}</a>
                                    </li>
                                    <li data-ng-class="nextPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>#</th>
                        <th>Tipo de Medida</th>
                        <th style="display:flex; justify-content:center; align-items:center;">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="animate-repeat" data-ng-repeat="c in TypeMeasure">
                        <td>{{($index + (itemsPerPage * currentPage)) + 1}}</td>
                        <td>{{c.NombreMedida}}</td>
                        <td style="display:flex; justify-content:center; align-items:center;">
                            <a href="javascript:void(0);" data-ng-click="UpdateTypeMeasure(c.idTipoMedida)" title="Editar"><i class="fa fa-pencil color-red"></i></a>
                            &nbsp;&nbsp;
                            @*<a href="javascript:void(0);" data-ng-click="DeleteTypeMeasure(c.idTipoMedida)" title="Eliminar"> <i class="fa fa-trash color-red"></i></a>*@
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4">
                            <div class="">
                                <ul class="pagination">
                                    <li data-ng-class="prevPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                    </li>
                                    <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                        <a href="javascript:void(0);">{{n + 1}}</a>
                                    </li>
                                    <li data-ng-class="nextPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>