@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "Tipo de Medida";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/CatalogTypeMeasure/Add")"></script>
<style>
    #holder {
        /*margin: 10px;*/
        width: 100%;
        height: 350px;
        border: 5px dashed gray;
        border-radius: 8px;
        background: rgb(230,230,230);
        background-repeat: no-repeat;
        background-size: 100%;
        vertical-align: central;
    }
</style>

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Agregar Tipo de Medida</h3>
    </div>
    <div class="panel-body" data-ng-controller="CatalogTypeMeasureController">
        <div class="form-group">
            <label>Tipo de Medida</label>
            <input type="text" maxlength="100" class="form-control" id="nombreMedida" data-ng-model="nombreMedida" placeholder="Escriba el nombre del tipo de medida" uppercase/>
        </div>
        <br />
        <div class="form-group text-center">
            <div class="col-sm-12">
                @Html.Raw(HtmlHelperExtension.Button("CatalogTypeMeasure", "SaveAddTypeMeasure", "SaveAddTypeMeasure", "SaveAddTypeMeasure", "Guardar", "", "", "SaveAddTypeMeasure()", "btn btn-primary", "Guardando..."))
                &nbsp;&nbsp;&nbsp;
            </div>
        </div>

        <div class="modal" tabindex="-1" role="dialog" id="modalMsg" aria-labelledby="modalReloadPage" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <span class="dial-text" id="msgModalMsg"></span>
                        </div>
                    </div>
                    <div class="container-btn-modal center-block">
                        <button type="button" class="btn confirmbutton-yes btn-danger btn-sm" data-dismiss="modal">Aceptar</button>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

