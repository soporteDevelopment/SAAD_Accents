@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;
@model ADEntities.ViewModels.TypeMeasureViewModel

@{
    ViewBag.Title = "Actualizar";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}
<script type="text/javascript" src="@Url.Js("Class/CatalogTypeMeasure/Update")"></script>

<style>
    #holder {
        /*margin: 10px;*/
        width: 100%;
        height: 350px;
        border: 5px dashed gray;
        border-radius: 8px;
        background: rgb(230,230,230);
        background-repeat: no-repeat;
        background-size: 100%;
        vertical-align: central;
    }
</style>

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Actualizar Tipo de Medida</h3>
    </div>
    <div class="panel-body" data-ng-controller="CatalogTypeMeasureController">
        <div class="form-horizontal">
            <input type="hidden" class="form-control" id="id" data-ng-model="id" data-ng-init="id='@Model.idTipoMedida'">

            <div class="form-group">
                <label>Tipo de Medida</label>
                <input type="text" maxlength="100" class="form-control" id="nombreMedida" data-ng-model="nombreMedida" data-ng-init="nombreMedida='@Model.NombreMedida'"  uppercase/>
            </div>
            <br />

            <div class="form-group text-center">
                <div class="col-sm-12">
                    @Html.Raw(HtmlHelperExtension.Button("CatalogTypeMeasure", "SaveUpdateTypeMeasure", "SaveUpdateTypeMeasure", "SaveUpdateTypeMeasure", "Guardar", "", "", "SaveUpdate()", "btn btn-primary", "Guardando..."))

                    &nbsp;&nbsp;&nbsp;
                </div>
            </div>
        </div>

    </div>

</div>