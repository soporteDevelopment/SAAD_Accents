@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;
@model ADEntities.ViewModels.ProductViewModel

<br />

<div class="panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Modificar Producto</h3>
    </div>
    <div class="panel-body">        
        <section data-ng-init="InitCategory('@Model.idCategoria','@Model.idSubcategoria')">
            <div class="form-group">
                <label>Categoría</label>
                <select class="form-control" name="CategoryId" id="CategoryId" data-ng-model="productCategory.Category" ng-change="GetSubcategoriesForUpdate(0)" data-ng-options="option.Nombre for option in Categories">
                </select>
            </div>
            <div class="form-group">
                <label>SubCategoría</label>
                <select class="form-control" name="SubcategoryId" id="SubcategoryId" data-ng-model="productCategory.Subcategory" data-ng-options="option.Nombre for option in Subcategories">
                </select>
            </div>
        </section>
    </div>
    @Html.Raw(HtmlHelperExtension.Button("Products", "SaveUpdateProductOnLine", "btnUpdateCategoryOnLine", "btnUpdateCategoryOnLine", "Guardar", "", "", "SaveUpdateCategoryOnLine(" + Model.idProducto + ")", "btn btn-primary", "Guardando..."))    
</div>
