@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "Tipo de Oficio";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/CatalogTypeService/List")"></script>

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Tipo de Oficio</h3>
    </div>
    <div class="panel-body" data-ng-controller="CatalogTypeServiceController" data-ng-enter="listTypeService(0)">
        <br />
        <br />
        <form class="form-horizontal">
            <div class="row" style="display:flex; justify-content:center; align-items:center">
                <div class="col-md-3">                    
                </div>   
                <div class="col-md-6">
                    <div class="form-group" style="display:flex; justify-content:center; align-items:center">
                        <label class="control-label">Tipo de Oficio</label>                        
                    </div>
                    <div class="form-group" style="display:flex; justify-content:center; align-items:center">
                        <input data-ng-model="typeServiceb" uppercase />
                    </div>
                </div>   
                <div class="col-md-3">                    
                </div>                
            </div>
            <div class="form-group " style="display:flex; justify-content:center; align-items:center">
                <button type="button" id="searchTypeService" class="btn btn-primary button-search" data-loading-text='Buscando...' data-ng-click="listTypeService()">Buscar</button>
            </div>
            
        </form>
        <br />
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td colspan="4">
                            <div class="">
                                <ul class="pagination">
                                    <li data-ng-class="prevPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                    </li>
                                    <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                        <a href="javascript:void(0);">{{n + 1}}</a>
                                    </li>
                                    <li data-ng-class="nextPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>#</th>
                        <th>Tipo de Oficio</th>
                        <th>Factor de Utilidad</th>
                        <th style="display:flex;justify-content:center;align-items:center">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="animate-repeat" data-ng-repeat="c in typeService">
                        <td>{{($index + (itemsPerPage * currentPage)) + 1}}</td>
                        <td>{{c.Descripcion}}</td>
                        <td>{{c.FactorUtilidad}}</td>
                        <td style="display:flex;justify-content:center;align-items:center">
                            <a href="javascript:void(0);" data-ng-click="UpdateTypeService(c.idTipoServicio)" title="Editar"><i class="fa fa-pencil color-red"></i></a>
                            @*&nbsp;&nbsp;*@
                            @*<a href="javascript:void(0);" data-ng-click="DeleteTypeService(c.idTipoServicio)" title="Eliminar"> <i class="fa fa-trash color-red"></i></a>*@
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4">
                            <div class="">
                                <ul class="pagination">
                                    <li data-ng-class="prevPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                    </li>
                                    <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                        <a href="javascript:void(0);">{{n + 1}}</a>
                                    </li>
                                    <li data-ng-class="nextPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>