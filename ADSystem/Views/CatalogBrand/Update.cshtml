@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;
@model ADEntities.ViewModels.CatalogBrandViewModel

@{
    ViewBag.Title = "Actualizar";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/CatalogBrand/Update")"></script>

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Actualizar Marca</h3>
    </div>

    <div class="panel-body" data-ng-controller="CatalogBrandController">
        <br />
        <form id="frmCatalogBrand" name="frmCatalogBrand" autocomplete="off">
            <input type="hidden" data-ng-model="idCatalogBrand" data-ng-init="idCatalogBrand = @Model.idCatalogBrand" />
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" id="name" name="name" data-ng-model="name" data-ng-init="name='@Model.Name'" placeholder="Nombre" uppercase maxlength="100" required />
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                <input type="text" class="form-control" id="description" name="description" data-ng-model="description" data-ng-init="description='@Model.Description'" placeholder="Descripcion" uppercase maxlength="50" />
            </div>
            <div class="form-group" data-ng-init="GetProviders();">
                <label>Proveedor</label>
                <select class="form-control" name="idProvider" id="idProvider" data-ng-model="idProvider" data-ng-init="idProvider=@Model.idProvider" data-ng-options="option.idProveedor as option.Nombre for option in Providers" required></select>
            </div>
            <button type="button" id="btnSave" class="btn btn-primary" data-ng-click="SaveBrand()">Guardar</button>
        </form>
    </div>
</div>

