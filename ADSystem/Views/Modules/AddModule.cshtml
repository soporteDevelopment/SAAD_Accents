@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "Módulos";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/Modules")"></script>

<br />
<section class="container-form">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Agregar Control</h3>
        </div>
        <div class="panel-body" data-ng-controller="ModulesController">
            <form class="form-horizontal">

                <div class="form-group">
                    <label>Módulo</label>                   
                    <input type="text" maxlength="100" class="form-control" id="control" data-ng-model="control" placeholder="Escriba el nombre del módulo" uppercase />                    
                </div>
                <br />
                <div class="form-group">
                    <label>Descripción</label>
                    <input type="text" maxlength="150" class="form-control" id="description" data-ng-model="description" placeholder="Escriba una descripción para el módulo" uppercase />
                </div>

                <div class="form-group">
                    @Html.Raw(HtmlHelperExtension.Button("Modules", "SaveAddModule", "SaveAddModule", "SaveAddModule", "Guardar", "", "", "SaveAddControl()", "btn btn-primary"))
                </div>

            </form>
        </div>
    </div>
</section>
