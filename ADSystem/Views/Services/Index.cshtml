@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "Servicios";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/Services")"></script>

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Servicios</h3>
        <br />
    </div>
    <div class="panel-body" data-ng-controller="ServicesController">  
        <form class="form-horizontal" style="margin-left:100px;width:690px;">
            <div class="form-group">
                <label class="col-sm-2 control-label">Servicio</label>
                <div class="col-sm-10">
                    <input data-ng-model="Service" />
                </div>
            </div>
            <div class="form-group text-center">
                <div class="col-sm-8">
                    <button type="button" id="searchService" class="btn btn-primary button-search" data-loading-text='Buscando...' data-ng-click="listServices(0)">Buscar</button>
                </div>
            </div>
        </form>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td colspan="3">
                                <div class="">
                                    <ul class="pagination">
                                        <li data-ng-class="prevPageDisabled()">
                                            <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                        </li>
                                        <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                            <a href="javascript:void(0);">{{n + 1}}</a>
                                        </li>
                                        <li data-ng-class="nextPageDisabled()">
                                            <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th>#</th>
                            <th>Descripción</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="animate-repeat" data-ng-repeat="o in Services">
                            <td>{{($index + (itemsPerPage * currentPage)) + 1}}</td>
                            <td>{{o.Descripcion}}</td>
                            <td class="pull-left"><a href="javascript:void(0);" data-ng-show="@HtmlHelperExtension.Icon("Services", "UpdateService") == 1" data-ng-click="UpdateService(o.idServicio)"><i class="fa fa-pencil color-red"></i></a></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3">
                                <div class="">
                                    <ul class="pagination">
                                        <li data-ng-class="prevPageDisabled()">
                                            <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                        </li>
                                        <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                            <a href="javascript:void(0);">{{n + 1}}</a>
                                        </li>
                                        <li data-ng-class="nextPageDisabled()">
                                            <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>

</div>
</div>