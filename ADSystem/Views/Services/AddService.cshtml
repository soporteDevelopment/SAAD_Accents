@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "Servicios";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/Services")"></script>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Agregar Servicio</h3>
    </div>
    <div class="panel-body" data-ng-controller="ServicesController">
        <div class="form-group">
            <label>Descripción</label>
            <input type="text" maxlength="200" class="form-control" id="description" data-ng-model="newService.Description" placeholder="Escriba la descripción" uppercase />
        </div>  
        <div class="form-group">
            <label>Instalacion</label>
            <input type="checkbox" class="form-control" style="height:18px;" id="installation" data-ng-model="newService.Installation" ng-true-value="1" ng-false-value="0" />
        </div>     

        @Html.Raw(HtmlHelperExtension.Button("Services", "SaveAddService", "SaveAddService", "SaveAddService", "Guardar", "", "", "SaveAddService()", "btn btn-primary", "Guardando..."))

        <br />
        <ul class="list-group">
            <li class="list-group-item errorGeneral" data-ng-repeat="err in valResult.errors">{{ err.propertyName }}: {{ err.errorMessage }}</li>
        </ul>
    </div>
</div>

