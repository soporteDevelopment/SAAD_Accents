@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "Asignar Proveedores a Precotización";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}
<script type="text/javascript" src="@Url.Js("Class/ProviderPreQuotation/AddProvider")"></script>
<script type="text/javascript" src="http://beneposto.pl/jqueryrotate/js/jQueryRotateCompressed.js"></script>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

<div class="panel panel-default" data-ng-controller="ProviderPreQuotationController" style="width:950px;">
    <div class="panel-heading" data-ng-init="LoadInformationPrequotation(@Newtonsoft.Json.JsonConvert.SerializeObject(@Model))">
        <h3 class="panel-title">Pre Cotización</h3>
    </div>
    <div class="panel-body" data-ng-init="LoadProviders()">
        <div class="row">
            <div class="col-md-6 text-center">
                <label class="control-label">Pre Cotización</label>
                <h4>{{number}}</h4>
            </div>
            <div class="col-md-6 text-center">
                <label class="control-label">Fecha y hora</label>
                <h4>{{dateTime}}</h4>
            </div>
        </div>
        <ul class="nav nav-tabs" role="tablist" style="margin-top:30px">
            <li role="presentation" class="active"><a href="#summary" aria-controls="summary" role="tab" data-toggle="tab">Resumen</a></li>
            <li role="presentation"><a href="#assign" aria-controls="assign" role="tab" data-toggle="tab">Asignar Proveedor</a></li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="summary" style="margin-top:30px">
                <div class="row">
                    <div class="panel panel-success" style="width:100%;">
                        <div class="panel-body">
                            <div class="panel-body">
                                <div class="row" style="margin-top:15px">
                                    <div class="col-md-4 text-center">IMAGEN</div>
                                    <div class="col-md-4">SERVICIO</div>
                                    <div class="col-md-4 text-center">CANTIDAD</div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 text-center"><img class="img-product-list" src="{{image}}" /></div>
                                    <div class="col-md-4">{{description}}</div>
                                    <div class="col-md-4 text-center">{{amount}}</div>
                                </div>
                                <div class="row" style="margin-top:25px">
                                    <div class="col-md-7" style="display:flex; justify-content:flex-end">
                                        <div ng-show="isVisibleButtonMeasures">
                                            <button class="btn btn-success" title="Ver Detalle Medidas Estandar" ng-click="OpenMeasuresDetail()">Medidas</button>
                                        </div>
                                        <div style="margin-left:25px"></div>
                                        <div ng-show="isVisibleButtonFabrics">
                                            <button class="btn btn-success" title="Ver Detalle Telas" ng-click="OpenFabricsDetail()">Telas</button>
                                        </div>
                                    </div>
                                    <div class="col-md-5 text-right" style="display:flex; justify-content:space-between">
                                        <div>
                                            <i class="fa fa-download color-red" style="left: 0px; margin-right: 5px;"></i>
                                            <a style="font-size:2rem; font-weight:bold; cursor:pointer" title="Descargar pdf adjunto" ng-click="DownloadPdf(typePdfAttach)">Pdf adjunto</a>
                                        </div>
                                        <div>
                                            <i class="fa fa-download color-red" style="left: 0px; margin-right: 5px;"></i>
                                            <a style="font-size: 2rem; font-weight: bold; cursor: pointer" title="Descargar pdf de la precotización" ng-click="DownloadPdf(typePdfPreQuotation)">Pdf Precotización</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:25px">
                                    <div class="col-md-12">
                                        <form>
                                            <div class="form-group">
                                                <label for="commentsService">Comentarios</label>
                                                <textarea class="form-control" rows="3" name="commentsService" id="commentsService" ng-model="comments" readonly style="resize:none" maxlength="400" uppercase></textarea>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="assign">
                <div class="row" style="margin-top:30px">
                    <div class="panel panel-success" style="width:100%;">
                        <div class="panel-body">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <h4>Tipo Proveedor</h4>
                                    </div>
                                    <div class="col-md-3">
                                        <select class="form-control" data-ng-model="descServiceType" data-ng-options="option.Descripcion for option in typeServicesList" ng-change="GetProviderByTypeService()">
                                            <option value="">Seleccione</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <select class="form-control" data-ng-model="descProvider" data-ng-options="option.Nombre for option in providerList">
                                            <option value="">Seleccione</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4" style="display:flex; justify-content:space-between;">
                                        <div> <button type="button" class="btn btn-danger" ng-click="AddProvider()">Agregar</button></div>
                                        <div> <button type="button" class="btn btn-danger" ng-really-message="Desea enviar estos proveedores" ng-really-yes="SendDataProvider(true);" ng-really-no="SendDataProvider(false);" ng-show="providers.length">Enviar</button></div>
                                    </div>
                                </div>
                                <div ng-show="providers.length">
                                    <h3 style="margin-top:30px" class="panel-title text-center">Proveedores</h3>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-3 text-center">
                                            <span class="color-red">Tipo Proveedor</span>
                                        </div>
                                        <div class="col-md-3 text-center">
                                            <span class="color-red">Nombre Proveedor</span>
                                        </div>
                                        <div class="col-md-3 text-center">
                                            <span class="color-red">Correo</span>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <span class="color-red">Teléfono</span>
                                        </div>
                                        <div class="col-md-1 text-center">
                                            <span class="color-red"></span>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="row" ng-repeat="item in providers">
                                                <div class="col-md-3 text-center">{{item.descriptionServiceType}}</div>
                                                <div class="col-md-3 text-center">{{item.name}}</div>
                                                <div class="col-md-3 text-center">{{item.email}}</div>
                                                <div class="col-md-2 text-center">{{item.phone}}</div>
                                                <div class="col-md-1 text-center">
                                                    <i class="fa fa-trash color-red" style="cursor:pointer;" title="Eliminar Provedor" ng-click="DeleteProvider(item.idItemProvider)"></i>
                                                </div>
                                            </div><br>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!----------------------------MODAL DETAIL MEASURES ---------------------------->
        <div class="modal" tabindex="-1" role="dialog" id="openModalDetailMeasures" aria-labelledby="openModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog ">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Detalle Medidas</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Nombre Medida</span>
                                    </div>
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Valor</span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" ng-repeat="item in detailMeasures">
                                            <div class="col-md-6 text-center">{{item.NombreTipoMedida}}</div>
                                            <div class="col-md-6 text-center txt-describe"><p data-toggle="tooltip" data-placement="top" />{{item.Valor}} mts.</div>
                                        </div><br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!----------------------------MODAL DETAIL FABRICS ---------------------------->
        <div class="modal" tabindex="-1" role="dialog" id="openModalDetailFabrics" aria-labelledby="openModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Detalle Telas</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row text-center">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Nombre Textiles</span>
                                    </div>
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Costo Por Mts</span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" ng-repeat="item in detailFabrics">
                                            <div class="col-md-6 text-center">{{item.NombreTextiles}}</div>
                                            <div class="col-md-6 text-center txt-describe"><p data-toggle="tooltip" data-placement="top" />{{item.CostoPorMts | currency}}</div>
                                        </div><br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
