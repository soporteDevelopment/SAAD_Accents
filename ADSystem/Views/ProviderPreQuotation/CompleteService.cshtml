@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "AssignProvider";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/ProviderPreQuotation/CompleteService")"></script>
<script type="text/javascript" src="http://beneposto.pl/jqueryrotate/js/jQueryRotateCompressed.js"></script>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

<div class="panel panel-default" data-ng-controller="ProviderPreQuotationController" style="width:950px;">
    <div class="panel-heading" data-ng-init="LoadInformation(@Newtonsoft.Json.JsonConvert.SerializeObject(@Model))">
        <h3 class="panel-title">Completar servicio</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6 text-center">
                <label class="control-label">Pre Cotización</label>
                <h4>{{number}}</h4>
            </div>
            <div class="col-md-6 text-center">
                <label class="control-label">Fecha y hora</label>
                <h4>{{dateTime}}</h4>
            </div>
        </div>
        <ul class="nav nav-tabs" role="tablist" style="margin-top:30px">
            <li role="presentation" class="active"><a href="#summary" aria-controls="summary" role="tab" data-toggle="tab">Resumen</a></li>
            <li role="presentation"><a href="#assign" aria-controls="assign" role="tab" data-toggle="tab">Asignar Costo</a></li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="summary" style="margin-top:20px">
                <div class="row">
                    <div class="panel panel-success" style="width:100%;">
                        <div class="panel-body">
                            <div class="panel-body">
                                <div class="row" style="margin-top:15px">
                                    <div class="col-md-3 text-center">IMAGEN</div>
                                    <div class="col-md-3">SERVICIO</div>
                                    <div class="col-md-3 text-center">CANTIDAD</div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-3 text-center"><img class="img-product-list" src="{{detail.Imagen}}" /></div>
                                    <div class="col-md-3">{{detail.Descripcion}}</div>
                                    <div class="col-md-3 text-center">{{detail.Cantidad}}</div>
                                </div>
                                <div class="row" style="margin-top:25px">
                                    <div class="col-md-7" style="display:flex; justify-content:flex-end">
                                        <div ng-show="isVisibleButtonMeasures">
                                            <button class="btn btn-success" title="Ver Detalle Medidas Estandar" ng-click="OpenMeasuresDetail()">Medidas</button>
                                        </div>
                                        <div style="margin-left:25px"></div>
                                        <div ng-show="isVisibleButtonFabrics">
                                            <button class="btn btn-success" title="Ver Detalle Telas" ng-click="OpenFabricsDetail()">Telas</button>
                                        </div>
                                    </div>
                                    <div class="col-md-5 text-right" style="display:flex; justify-content:space-between">
                                        <div>
                                            <i class="fa fa-download color-red" style="left: 0px; margin-right: 5px;"></i>
                                            <a style="font-size:2rem; cursor:pointer" title="Descargar pdf adjunto" ng-click="DownloadPdf(typePdfAttach)">PDF servicio</a>
                                        </div>
                                        <div>
                                            <i class="fa fa-download color-red" style="left: 0px; margin-right: 5px;"></i>
                                            <a style="font-size: 2rem; cursor: pointer" title="Descargar pdf de la precotización" ng-click="DownloadPdf(typePdfPreQuotation)">PDF Precotización</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:25px">
                                    <div class="col-md-12">
                                        <form>
                                            <div class="form-group">
                                                <label for="commentsService">Comentarios</label>
                                                <textarea class="form-control" rows="3" name="commentsService" id="commentsService" ng-model="comments" readonly style="resize:none" maxlength="400" uppercase></textarea>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="assign">
                <div class="row" style="margin-top:30px">
                    <div class="panel panel-success" style="width:100%;">
                        <div class="panel-body">
                            <div class="panel-body">
                                <h3 class="panel-title text-center">Proveedores</h3>
                                <br />
                                <div class="row">
                                    <div class="col-md-2 text-center">
                                        <span class="color-red">Tipo Proveedor</span>
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <span class="color-red">Proveedor</span>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <span class="color-red">Costo</span>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <span class="color-red">Dias habiles</span>
                                    </div>
                                    @*<div class="col-md-2 text-center">
                                            <span class="color-red">Comentarios proveedor</span>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <span class="color-red">Comentarios comprador</span>
                                        </div>*@
                                    @*<div class="col-md-2 text-center">
                                        <span class="color-red">Telas</span>
                                    </div>*@
                                    <div class="col-md-2 text-center">
                                        <span class="color-red"></span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" ng-repeat="item in providers">
                                            <div style="margin-top: 14px"></div>
                                            <div class="col-md-2 text-center">{{item.TipoProveedor}}</div>
                                            <div class="col-md-4 text-center">{{item.Proveedor}}</div>
                                            <div class="col-md-2 text-center">{{item.CostoFabricacion ? (item.CostoFabricacion | currency) : "S/D"}}</div>
                                            <div class="col-md-2 text-center">{{item.DiasFabricacion ? item.DiasFabricacion : "S/D"}}</div>
                                            @*<div class="col-md-2 text-center">
                                                <a style="cursor:pointer" title="Ver costos de telas" ng-click="OpenModalDetailFabricsCost(item)">Detalle</a>
                                            </div>*@
                                            <div class="col-md-2 text-center">
                                                <i class="fa fa-pencil color-red" style="cursor:pointer" title="Actualizar datos" ng-click="openModalUpdate(item)"></i>
                                                @*<i class="fa fa-trash color-red" style="cursor:pointer" title="Eliminar proveedor" ng-click="DeleteProvider(item.idProduct)"></i>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="display:flex; justify-content:space-between; margin-top: 35px">
                                <div> <button type="button" class="btn btn-danger" ng-click="SendDataProvider()">Guardar</button></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!----------------------------MODAL DETAIL MEASURES ---------------------------->
        <div class="modal" tabindex="-1" role="dialog" id="openModalDetailMeasures" aria-labelledby="openModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog ">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Detalle Medidas</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Nombre Medida</span>
                                    </div>
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Valor</span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" ng-repeat="item in detailmeasures">
                                            <div class="col-md-6 text-center">{{item.NombreTipoMedida}}</div>
                                            <div class="col-md-6 text-center txt-describe"><p data-toggle="tooltip" data-placement="top" />{{item.Valor}}</div>
                                        </div><br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!----------------------------MODAL DETAIL FABRICS ---------------------------->
        <div class="modal" tabindex="-1" role="dialog" id="openModalDetailFabrics" aria-labelledby="openModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Detalle Telas</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row text-center">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Telas</span>
                                    </div>
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">PP/MT</span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" ng-repeat="item in detailfabrics">
                                            <div class="col-md-6 text-center">{{item.NombreTextiles}}</div>
                                            <div class="col-md-6 text-center txt-describe"><p data-toggle="tooltip" data-placement="top" />{{item.CostoPorMts | currency}}</div>
                                        </div><br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!----------------------------MODAL DETAIL ---------------------------->
        <div class="modal" tabindex="-1" role="dialog" id="openModalUpdate" aria-labelledby="openModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                        <h3 class="modal-title">Agregar costo de telas</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row" style="display: flex; justify-content: space-between;">
                            <div class="col-md-3" style=" justify-content: center; align-items: center; ">
                                <label style="padding-right: 10px">Costo de fabricación</label>
                                <input type="text" class="form-control" ng-model="cost" min="0" max="100" ng-currency maxlength="8" />
                            </div>
                            <div class="col-md-3" style="justify-content: center; align-items: center; ">
                                <label style="padding-right: 10px">Días habiles</label>
                                <input type="text" class="form-control" ng-model="days" min="0" max="100" ng-keydown="ValidateDays($event)" />
                            </div>
                            <div class="col-md-6"></div>
                        </div>
                        <div class="row" style="margin-top:15px">
                            <div class="col-md-12">
                                <textarea class="form-control" rows="3" style="resize: none; width:100%" ng-model="commentProvider" placeholder="Comentarios de proveedor" uppercase></textarea>
                            </div>
                        </div>
                        <div class="row" style="margin-top:15px">
                            <div class="col-md-12">
                                <textarea class="form-control" rows="3" style="resize:none; width:100%" ng-model="commentSeller" placeholder="Comentarios de Comprador" uppercase></textarea>
                            </div>
                        </div>
                        <div ng-show="detailfabrics.length > 0">
                            <h3 class="panel-title text-center" style="margin-top:15px">Telas</h3>
                            <div class="row" style="margin-top: 20px">
                                <div class="col-md-12">
                                    <div class="row col-md-12">
                                        <div class="col-md-3" style="display: flex; justify-content: center; align-items:center;">
                                            <label style="color: red">Tela</label>
                                        </div>
                                        <div class="col-md-3" style="display: flex; justify-content: center; align-items:center;">
                                            <label style="color: red">Metros</label>
                                        </div>
                                        <div class="col-md-3" style="display: flex; justify-content: center; align-items:center;">
                                            <label style="color: red">PP/MT</label>
                                        </div>
                                        <div class="col-md-3" style="display: flex; justify-content: center; align-items:center;">
                                            <label style="color: red">PP total tela</label>
                                        </div>
                                        <br />
                                    </div>
                                </div>
                                <div class="col-md-12" ng-repeat="item in detailfabrics" style="margin-top: 15px;">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="row col-md-12">
                                                <div class="col-md-3" style="display: flex; justify-content: center; align-items:center;">
                                                    <label>{{item.NombreTextiles}}</label>
                                                </div>
                                                <div class="col-md-3" style="display: flex; justify-content: center; align-items:center;">
                                                    <div style="margin-top:8px"><input type="text" class="form-control" id="fabric{{item.idTextiles}}" placeholder="Metros" ng-keyup="CalculateMts($event, item)" ng-model="valueMts" /></div>
                                                </div>
                                                <div class="col-md-3" style="display: flex; justify-content: center; align-items:center;">
                                                    <label>{{item.CostoPorMts | currency}}</label>
                                                </div>
                                                <div class="col-md-3" style="display: flex; justify-content: center; align-items:center;">
                                                    <label id="inputFabric{{item.idTextiles}}"></label>
                                                </div>
                                                <br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-12" style="display:flex; justify-content: end; align-items: end;">
                                <button class="btn btn-danger" ng-click="UpdateProviderData()">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!----------------------------MODAL DETAIL MEASURES ---------------------------->
        <div class="modal" tabindex="-1" role="dialog" id="openModalDetailMeasures" aria-labelledby="openModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog ">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Detalle Medidas</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Nombre Medida</span>
                                    </div>
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Valor</span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" ng-repeat="item in detailMeasures">
                                            <div class="col-md-6 text-center">{{item.NombreTipoMedida}}</div>
                                            <div class="col-md-6 text-center txt-describe"><p data-toggle="tooltip" data-placement="top" />{{item.Valor}} mts.</div>
                                        </div><br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!----------------------------MODAL DETAIL FABRICS ---------------------------->
        <div class="modal" tabindex="-1" role="dialog" id="openModalDetailFabrics" aria-labelledby="openModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Detalle Telas</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row text-center">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Nombre Textiles</span>
                                    </div>
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Costo Por Mts</span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" ng-repeat="item in detailFabrics">
                                            <div class="col-md-6 text-center">{{item.NombreTextiles}}</div>
                                            <div class="col-md-6 text-center txt-describe"><p data-toggle="tooltip" data-placement="top" />{{item.ValorMts}}</div>
                                        </div><br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!----------------------------MODAL DETAIL FABRICS COST ---------------------------->
        <div class="modal" tabindex="-1" role="dialog" id="openModalDetailFabricsCost" aria-labelledby="openModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Valor de telas</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row text-center">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Nombre Textiles</span>
                                    </div>
                                    <div class="col-md-6 text-center">
                                        <span class="color-red">Valor Por Mts</span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" ng-repeat="item in detailCost">
                                            <div class="col-md-6 text-center">{{item.NombreTextiles}}</div>
                                            <div class="col-md-6 text-center txt-describe"><p data-toggle="tooltip" data-placement="top" />{{item.ValorMts ? (item.ValorMts | currency) : "S/D"}}</div>
                                        </div><br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

