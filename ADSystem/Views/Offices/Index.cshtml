@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "Despachos";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/Offices")"></script>

<br />
<div class="panel panel-default" style="width: 900px;">
    <div class="panel-heading">
        <h3 class="panel-title">Despachos</h3>        
        <br />
    </div>
    <div class="panel-body" data-ng-controller="OfficesController">           
        @*<div class="col-sm-12 text-center">
            <button type="button" class="btn btn-primary button-search" data-ng-click="AddOffice()">Agregar</button>
        </div>*@    
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Despacho</label>
                <div class="col-sm-10">
                    <input data-ng-model="searchOffices" maxlength="250" style = "width: 335px;"/>
                </div>
            </div>
            <div class="form-group text-center">
                <div class="col-sm-12">
                    <button type="button" id="searchOffices" class="btn btn-primary button-search" data-loading-text='Buscando...' data-ng-click="listOffices()">Buscar</button>
                </div>
            </div>
        </form> 
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td colspan="3">
                            <div class="">
                                <ul class="pagination">
                                    <li data-ng-class="prevPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                    </li>
                                    <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                        <a href="javascript:void(0);">{{n + 1}}</a>
                                    </li>
                                    <li data-ng-class="nextPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Telefono</th>
                        <th>Correo</th>
                        <th>Comisión(%)</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="animate-repeat" data-ng-repeat="o in Offices">
                        <td>{{($index + (itemsPerPage * currentPage)) + 1}}</td>
                        <td>{{o.Nombre}}</td>
                        <td>{{o.Telefono}}</td>
                        <td>{{o.Correo}}</td>
                        <td>{{o.Comision}}</td>
                        <td class="pull-left"><a href="javascript:void(0);" data-ng-show="@HtmlHelperExtension.Icon("Offices", "UpdateOffice") == 1" data-ng-click="UpdateOffice(o.idDespacho)"><i class="fa fa-pencil color-red"></i></a><a href="javascript:void(0);" data-ng-show="@HtmlHelperExtension.Icon("Offices", "DeleteOffice") == 1" ng-click="DeleteOffice(o.idDespacho)"> <i class="fa fa-trash color-red"></i></a></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">
                            <div class="">
                                <ul class="pagination">
                                    <li data-ng-class="prevPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                    </li>
                                    <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                        <a href="javascript:void(0);">{{n + 1}}</a>
                                    </li>
                                    <li data-ng-class="nextPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

    </div>
</div>