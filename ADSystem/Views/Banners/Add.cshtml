@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;

@{
    ViewBag.Title = "Agregar Banner";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<script type="text/javascript" src="@Url.Js("Class/Banners/Add")"></script>
<script type="text/javascript" src="@Url.Js("jQueryRotate")"></script>
<script type="text/javascript">
    function rotate() {
        var value = 0
        $("#imgName").rotate({
            bind:
            {
                click: function () {
                    value += 90;
                    $(this).rotate({ animateTo: value })
                }
            }
        });
    }
</script>
<style>
    #holder, #holderUrl {
        /*margin: 10px;*/
        width: 100%;
        height: 350px;
        border: 5px dashed gray;
        border-radius: 8px;
        background: rgb(230,230,230);
        background-repeat: no-repeat;
        background-size: 100%;
        vertical-align: central;
    }
</style>

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Agregar Banner</h3>
    </div>
    <div class="panel-body" data-ng-controller="BannersController">
        <code ng-show="!frmBanner.$valid && frmBanner.$dirty">Revise la información</code><br>
        <form id="frmBanner" name="frmBanner" autocomplete="off">
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" id="name" name="name" data-ng-model="name" placeholder="Escriba el nombre del banner" uppercase maxlength="100" required />
                <code class="has-error" ng-show="frmBanner.name.$error.required && frmBanner.$dirty">Requerido!</code>
            </div>
        </form>
        <br />
        <section class="container-tab" data-ng-init="fileMethod()">
            <br /><br />
            <div id="file-content" class="table-responsive file">
                <center><label>Arrastre aqui el archivo de imagen que desea agregar</label></center>
                <div id="holder" class=""></div>
                <br />
                * Se permiten imágenes con formato PNG, JPEG y GIF
                <br /><br />
                <br /><br />
                <input type="hidden" id="imgName" />
            </div>
        </section>
        <button type="button" id="btnSave" ng-show="frmBanner.$valid" class="btn btn-primary button-search" data-loading-text='Buscando...' data-ng-click="SaveAdd()">Agregar</button>
        <br />

        <div class="modal" tabindex="-1" role="dialog" id="modalMsg" aria-labelledby="modalReloadPage" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <span class="dial-text" id="msgModalMsg"></span>
                        </div>
                    </div>
                    <div class="container-btn-modal center-block">
                        <button type="button" class="btn confirmbutton-yes btn-danger btn-sm" data-dismiss="modal">Aceptar</button>
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

