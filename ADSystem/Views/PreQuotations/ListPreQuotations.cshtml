@using System.Web.MVC;
@using System.Web.Helpers;
@using ADSystem.Helpers;
@{
    ViewBag.Title = "ListPreQuotations";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<link rel="stylesheet" type="text/css" href="@Url.Css("Content/CSS/bootstrap-datetimepicker.min")" />

<script type="text/javascript" src="@Url.Js("Class/PreQuotations/List")"></script>

<script type="text/javascript" src="@Url.Js("moment.min")"></script>
<script type="text/javascript" src="@Url.Js("bootstrap-datetimepicker.min")"></script>


<br />
<div class="panel panel-default" style="width:1210px;">
    <div class="panel-heading">
        <h3 class="panel-title">Pre Cotización</h3>
    </div>
    <div class="panel-body" data-ng-controller="PreQuotationsController" data-ng-enter="listPreQuotations()">
        <form class="form-horizontal" style="margin-left:300px;width:500px;">
            <div class="form-group">
                <label class="col-sm-2 control-label">Desde</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="dateSince" datepicker-popup="{{format}}" data-ng-model="dateSince" is-open="openedSince" min-date="'1900-01-01'" max-date="'2200-01-01'" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" data-ng-click="openSince($event)" show-button-bar="false" placeholder="Seleccione la fecha inicial de consulta" data-ng-init="dateSince = '@DateTime.Now.ToString("MM/dd/yyyy")'" readonly />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Hasta</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="dateUntil" datepicker-popup="{{format}}" data-ng-model="dateUntil" is-open="openedUntil" min-date="'1900-01-01'" max-date="'2200-01-01'" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" data-ng-click="openUntil($event)" show-button-bar="false" placeholder="Seleccione la fecha final de consulta" data-ng-init="dateUntil = '@DateTime.Now.ToString("MM/dd/yyyy")'" readonly />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Número</label>
                <div class="col-sm-10">
                    <input type="text" data-ng-model="number" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Proyecto</label>
                <div class="col-sm-10">
                    <input type="text" data-ng-model="project" uppercase/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Cliente</label>
                <div class="col-sm-10">
                    <input type="text" data-ng-model="customer" uppercase/>
                </div>
            </div>
            <div class="form-group" ng-init="loadsellers()">
                <label class="col-sm-2 control-label">Vendedor</label>
                <div class="col-sm-10">
                    <select class="form-control" data-ng-model="sseller" data-ng-options="option.NombreCompleto for option in sellers">
                        <option value="">Seleccione</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Sucursal</label>
                <div class="col-sm-10">
                    <input type="checkbox" ng-model="sBranchAma" ng-true-value="2" />Ámazonas
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="checkbox" ng-model="sBranchGua" ng-true-value="3" />Guadalquivir
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="checkbox" ng-model="sBranchTex" ng-true-value="4" />Textura
                </div>
            </div>
            <div class="form-group text-center">
                <div class="col-sm-12">
                    <button type="button" id="searchPreQuotations" class="btn btn-primary button-search" data-loading-text='Buscando...' data-ng-click="listPreQuotations()">Buscar</button>
                </div>
            </div>
        </form>

        <br />
        <div class="table-responsive" style="width:1200px;">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td colspan="3">
                            <div class="">
                                <ul class="pagination">
                                    <li data-ng-class="prevPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                    </li>
                                    <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                        <a href="javascript:void(0);">{{n + 1}}</a>
                                    </li>
                                    <li data-ng-class="nextPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>Número</th>
                        <th>Estatus</th>
                        <th>Cliente</th>
                        <th>Vendedor</th>
                        <th>Sucursal</th>
                        <th>Moneda</th>
                        <th>Fecha</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="animate-repeat" data-ng-repeat="s in PreQuotations">
                        <td>{{s.Numero}}</td>
                        <td>{{s.sEstatus}}</td>
                        <td>{{s.ClienteFisico}}{{s.ClienteMoral}}{{s.Despacho}}</td>
                        <td>{{s.Usuario1}}</td>
                        <td>{{s.Sucursal}}</td>
                        <td>{{(s.Dolar == true)? 'Dólares': 'MXN'}}</td>
                        <td>{{s.Fecha | jsDate | date:'shortDate'}}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn btn-sm btn-success dropdown-toggle" style="width:80px;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Opciónes<span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" style="min-width:78px; max-width:78px;">
                                    <li>
                                        @* Pendiente agregar funcionalidades... *@
                                        <a href="javascript:void(0);" data-ng-show="@HtmlHelperExtension.Icon("PreQuotations", "GetEraserPreQuotation") == 1" title="Editar" data-ng-click="GetEraserPreQuotation(s.idPreCotizacion)"><i class="fa fa-check-square-o color-red" style="left: 0px;" ng-show="s.Estatus == 1"></i></a>
                                        <a href="javascript:void(0);" data-ng-show="@HtmlHelperExtension.Icon("PreQuotations", "ClonePreQuotation") == 1" title="Duplicar" ng-click="Clone(s.idPreCotizacion)"><i class="fa fa fa-copy color-red" style="left: 0px;"></i></a>
                                        <a href="javascript:void(0);" data-ng-show="@HtmlHelperExtension.Icon("PreQuotations", "GetPreQuotations") == 1" title="Detalle" data-ng-click="openModalDetail(s)"><i class="fa fa-info-circle color-red" style="left: 0px;"></i></a>
                                        <a href="javascript:void(0);" data-ng-show="@HtmlHelperExtension.Icon("PreQuotations", "DownloadPDF") == 1" title="Descargar PDF" ng-click="DownloadPDF(s.idPreCotizacion,s.Numero)"><i class="fa fa-download color-red" style="left: 0px;"></i></a>
                                        <a href="javascript:void(0);" data-ng-show="@HtmlHelperExtension.Icon("PreQuotations", "DownloadPDF") == 1" title="Enviar a cotización" ng-click="SendQuotation(s.idPreCotizacion)"><i class="fa fa-send color-red" style="left: 0px;" ng-show="s.Estatus == 3"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">
                            <div class="">
                                <ul class="pagination">
                                    <li data-ng-class="prevPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="prevPage()">« Ant</a>
                                    </li>
                                    <li data-ng-repeat="n in range()" data-ng-class="{activePage: (n) == currentPage}" data-ng-click="setPage(n)">
                                        <a href="javascript:void(0);">{{n + 1}}</a>
                                    </li>
                                    <li data-ng-class="nextPageDisabled()">
                                        <a href="javascript:void(0);" data-ng-click="nextPage()">Sig »</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!----------------------------MODAL DETAIL ---------------------------->
        <div class="modal" tabindex="-1" role="dialog" id="openModalDetail" aria-labelledby="openModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Pre cotización con folio  {{folio}}</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-3 text-center">
                                        <span class="color-red">Imagen</span>
                                    </div>
                                    <div class="col-md-3 text-center">
                                        <span class="color-red">Servicio</span>
                                    </div>
                                    <div class="col-md-3 text-center">
                                        <span class="color-red">Cantidad</span>
                                    </div>
                                    <div class="col-md-3 text-center">
                                        <span class="color-red">Opciones</span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" ng-repeat="item in detailPrequotation">
                                            <div class="col-md-3 text-center"><img class="img-product-list" src="{{item.Imagen}}" /></div>
                                            <div class="col-md-3 text-center">{{item.Descripcion}}</div>
                                            <div class="col-md-3 text-center txt-describe"><p data-toggle="tooltip" data-placement="top" />{{item.Cantidad}}</div>
                                            <div class="col-md-3 " style="display:flex; justify-content: space-around; align-items: center">
                                                <a style=" left: 0px; cursor:pointer" title="Cotizar servicio" ng-show="item.idEstatus == 1" ng-click="GoToViewPageProvider(item.idPreCotizacionDetalle)">Cotizar</a>
                                                <a style=" left: 0px; cursor:pointer" title="Completar servicio" ng-show="item.idEstatus == 2 || item.idEstatus == 3" ng-click="GoToViewPageComplete(item.idPreCotizacionDetalle)">Completar</a>
                                                <a style="left: 0px; cursor:pointer" title="Asignar proveedores" ng-show="item.idEstatus == 3" ng-click="GoToViewPageAssign(item.idPreCotizacionDetalle)">Asignar</a>
                                                <label ng-show="item.idEstatus == 4">Asignado</label>
                                                <label ng-show="item.idEstatus == 5">En proceso de venta</label>
                                                <a style="left: 0px; cursor:pointer" title="Generar orden" ng-show="item.idEstatus == 6" ng-click="GoToViewPageGenerateOrder(item.idPreCotizacionDetalle)">Generar orden</a>
                                                <a style="left: 0px; cursor:pointer" title="Generar orden" ng-show="item.idEstatus == 7" ng-click="GoToViewPageGenerateOrder(item.idPreCotizacionDetalle)">Ordenada</a>
                                                @* cuando venga en estatus 6 pasa al estatus de pendiente de ordenar. mostrar link. (generar orden)*@
                                                @* cuando estatus este en 7 que es Ordenado mostraremos link que envie a donde mismo que estatus 7 pero con la leyenda ordenada *@
                                            </div>
                                        </div><br>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>